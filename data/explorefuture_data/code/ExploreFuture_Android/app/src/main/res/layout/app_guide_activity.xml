<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/app_status_bar_height"
    tools:context="itc.ink.explorefuture_android.app.activity.GuideActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/app_Guide_ViewPager"
        android:overScrollMode="never"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.95">
        <View
            android:id="@+id/app_Guide_ViewPager_Indicator_One"
            android:background="@drawable/app_guide_indicator_bg"
            android:layout_width="20dp"
            android:layout_height="2dp"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/app_Guide_ViewPager_Indicator_Two"/>
        <View
            android:id="@+id/app_Guide_ViewPager_Indicator_Two"
            android:background="@drawable/app_guide_indicator_bg"
            android:layout_width="20dp"
            android:layout_height="2dp"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/app_Guide_ViewPager_Indicator_One"
            app:layout_constraintRight_toLeftOf="@+id/app_Guide_ViewPager_Indicator_Three"/>
        <View
            android:id="@+id/app_Guide_ViewPager_Indicator_Three"
            android:background="@drawable/app_guide_indicator_bg"
            android:layout_width="20dp"
            android:layout_height="2dp"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/app_Guide_ViewPager_Indicator_Two"
            app:layout_constraintRight_toLeftOf="@+id/app_Guide_ViewPager_Indicator_Four"/>
        <View
            android:id="@+id/app_Guide_ViewPager_Indicator_Four"
            android:background="@drawable/app_guide_indicator_bg"
            android:layout_width="20dp"
            android:layout_height="2dp"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/app_Guide_ViewPager_Indicator_Three"
            app:layout_constraintRight_toRightOf="parent"/>
        <View
            android:id="@+id/app_Guide_ViewPager_Indicator_Five"
            android:background="@drawable/app_guide_indicator_bg"
            android:layout_width="20dp"
            android:layout_height="2dp"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/app_Guide_Start_Future_Btn"
        android:text="@string/app_guide_start_future_btn_text"
        android:textSize="@dimen/app_common_btn_text_size"
        android:textColor="@color/app_common_btn_text_color_light"
        android:background="@drawable/app_common_btn_bg"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:alpha="0.0"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.8"/>

</android.support.constraint.ConstraintLayout>
