<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/app_status_bar_height"
    android:background="@color/app_def_theme_activity_bg"
    tools:context=".common_unit.content_list.ContentListActivity">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/content_List_Activity_Top_Navigation"
        android:layout_width="0dp"
        android:layout_height="@dimen/app_top_navigation_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/content_List_Activity_Top_Navigation_Back_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:src="@drawable/vector_drawable_back_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/content_List_Activity_Top_Navigation_Title_Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/content_list_activity_top_navigation_title_text"
            android:textColor="@color/app_top_navigation_text_selected_color"
            android:textSize="@dimen/app_top_navigation_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/content_List_Activity_Top_Rank_Bar"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content_List_Activity_Top_Navigation">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/content_List_Activity_Top_Rank_Universal_Btn_Layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/content_List_Activity_Top_Rank_Bar_BottomLine"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/content_List_Activity_Top_Rank_Hot_Btn_Layout">
            <TextView
                android:id="@+id/content_List_Activity_Top_Rank_Universal_Btn"
                android:text="@string/content_list_activity_top_filter_universal_btn_text"
                android:textColor="@color/sort_top_navigation_text_selected_color"
                android:textSize="12dp"
                android:gravity="center"
                android:drawableRight="@drawable/vector_drawable_rank_down"
                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/content_List_Activity_Top_Rank_Hot_Btn_Layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/content_List_Activity_Top_Rank_Bar_BottomLine"
            app:layout_constraintLeft_toRightOf="@id/content_List_Activity_Top_Rank_Universal_Btn_Layout"
            app:layout_constraintRight_toLeftOf="@+id/content_List_Activity_Top_Rank_Sales_Btn_Layout">
            <TextView
                android:id="@+id/content_List_Activity_Top_Rank_Hot_Btn"
                android:text="@string/content_list_activity_top_filter_hot_btn_text"
                android:textColor="@color/sort_top_navigation_text_selected_color"
                android:textSize="12dp"
                android:gravity="center"
                android:drawableRight="@drawable/vector_drawable_rank_no"
                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/content_List_Activity_Top_Rank_Sales_Btn_Layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/content_List_Activity_Top_Rank_Bar_BottomLine"
            app:layout_constraintLeft_toRightOf="@+id/content_List_Activity_Top_Rank_Hot_Btn_Layout"
            app:layout_constraintRight_toLeftOf="@+id/content_List_Activity_Top_Rank_Evaluate_Btn_Layout">
            <TextView
                android:id="@+id/content_List_Activity_Top_Rank_Sales_Btn"
                android:text="@string/content_list_activity_top_filter_sales_btn_text"
                android:textColor="@color/sort_top_navigation_text_selected_color"
                android:textSize="12dp"
                android:gravity="center"
                android:drawableRight="@drawable/vector_drawable_rank_no"
                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/content_List_Activity_Top_Rank_Evaluate_Btn_Layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/content_List_Activity_Top_Rank_Bar_BottomLine"
            app:layout_constraintLeft_toRightOf="@+id/content_List_Activity_Top_Rank_Sales_Btn_Layout"
            app:layout_constraintRight_toLeftOf="@+id/content_List_Activity_Top_Filter_Btn_Layout">
            <TextView
                android:id="@+id/content_List_Activity_Top_Rank_Evaluate_Btn"
                android:text="@string/content_list_activity_top_filter_evaluate_btn_text"
                android:textColor="@color/sort_top_navigation_text_selected_color"
                android:textSize="12dp"
                android:gravity="center"
                android:drawableRight="@drawable/vector_drawable_rank_no"
                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/content_List_Activity_Top_Filter_Btn_Layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/content_List_Activity_Top_Rank_Bar_BottomLine"
            app:layout_constraintLeft_toRightOf="@+id/content_List_Activity_Top_Rank_Evaluate_Btn_Layout"
            app:layout_constraintRight_toRightOf="parent">
            <View
                android:layout_width="@dimen/app_navigation_bg_line_width"
                android:layout_height="0dp"
                android:background="@color/app_navigation_bg_line_color"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <ImageView
                android:src="@drawable/vector_drawable_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <View
            android:id="@+id/content_List_Activity_Top_Rank_Bar_BottomLine"
            android:layout_width="0dp"
            android:layout_height="@dimen/app_navigation_bg_line_width"
            android:background="@color/app_navigation_bg_line_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/content_List_Activity_RecyclerView"
        android:overScrollMode="never"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/content_List_Activity_Top_Rank_Bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>