<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.Guideline
        android:id="@+id/content_ListItem_Vertical_Guideline_One"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />
    <ImageView
        android:id="@+id/content_ListItem_Image"
        android:src="@drawable/picture_place_image"
        android:scaleType="centerCrop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/content_ListItem_Vertical_Guideline_One"
        app:layout_constraintDimensionRatio="1:1"/>
    <TextView
        android:id="@+id/content_ListItem_Title"
        android:text="产品/方案名称"
        android:textSize="12dp"
        android:maxLength="@dimen/handpick_item_title_text_two_slash_three_max_length"
        android:textColor="@color/handpick_common_item_title_text_color_dark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/content_ListItem_Vertical_Guideline_One"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/content_ListItem_Summary"
        android:text="产品方/案描述"
        android:textSize="10dp"
        android:maxLength="@dimen/handpick_item_summary_text_two_slash_three_more_line_max_length"
        android:textColor="@color/handpick_common_item_summary_text_color_dark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/content_ListItem_Title"
        app:layout_constraintLeft_toRightOf="@id/content_ListItem_Vertical_Guideline_One"
        app:layout_constraintRight_toRightOf="parent"/>
    <LinearLayout
        android:id="@+id/content_ListItem_Tag_Layout"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/content_ListItem_Summary"
        app:layout_constraintBottom_toTopOf="@+id/content_ListItem_Price"
        app:layout_constraintLeft_toRightOf="@id/content_ListItem_Vertical_Guideline_One"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/content_ListItem_SupportNum"
        android:text=" 支持票数"
        android:textSize="@dimen/handpick_item_footer_text_size"
        android:maxLength="@dimen/handpick_item_summary_text_one_slash_four_max_length"
        android:textColor="@color/handpick_common_item_summary_text_color_dark"
        android:drawableLeft="@drawable/vector_drawable_accept"
        android:drawablePadding="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toBottomOf="@id/content_ListItem_Image"
        app:layout_constraintLeft_toRightOf="@id/content_ListItem_Vertical_Guideline_One"/>
    <TextView
        android:id="@+id/content_ListItem_Price"
        android:text="价格"
        android:textSize="12dp"
        android:maxLength="@dimen/handpick_item_summary_text_one_slash_four_max_length"
        android:textColor="#FF0000"
        android:gravity="bottom"
        android:drawableLeft="@drawable/vector_drawable_price"
        android:drawablePadding="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="@id/content_ListItem_Image"
        app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:id="@+id/content_ListItem_Divider_Line"
        android:background="@color/handpick_common_item_divider_line_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/handpick_item_bg_line_width"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@id/content_ListItem_Image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
