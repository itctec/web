<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/mind_ListItem_Header_Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/mind_ListItem_HeadPortrait"
            android:src="@drawable/picture_place_image"
            android:scaleType="centerCrop"
            android:layout_width="45dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintDimensionRatio="1:1"/>
        <TextView
            android:id="@+id/mind_ListItem_Name"
            android:text="昵称"
            android:textColor="@color/app_item_name_color_dark"
            android:textSize="@dimen/attention_person_name_text_size"
            android:maxLength="@dimen/attention_item_name_text_one_slash_four_max_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@id/mind_ListItem_HeadPortrait"
            app:layout_constraintBottom_toTopOf="@+id/mind_ListItem_Datetime"
            app:layout_constraintLeft_toRightOf="@id/mind_ListItem_HeadPortrait"/>
        <TextView
            android:id="@+id/mind_ListItem_Datetime"
            android:text="XXXX年XX月XX日 XX:XX"
            android:textColor="@color/app_item_name_summary_color_dark"
            android:textSize="@dimen/attention_person_domain_text_size"
            android:maxLength="@dimen/attention_item_datetime_text_two_slash_three_short_max_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@id/mind_ListItem_Name"
            app:layout_constraintBottom_toTopOf="@id/mind_ListItem_HeadPortrait"
            app:layout_constraintLeft_toRightOf="@id/mind_ListItem_HeadPortrait"/>
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/mind_ListItem_Content_Text"
        android:text="@string/recommend_mind_content_empty_text"
        android:textColor="@color/app_mind_content_item_text_color"
        android:textSize="@dimen/app_mind_content_item_text_size"
        android:maxLength="@dimen/app_mind_content_item_text_max_length"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/mind_ListItem_Header_Layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/mind_ListItem_Content_Media_Layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@id/mind_ListItem_Content_Text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:id="@+id/mind_ListItem_Content_Bg_Line"
        android:background="@color/attention_common_item_divider_line_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/attention_item_bg_line_width"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/mind_ListItem_Content_Media_Layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/mind_ListItem_Accept_Num"
        android:text="认可数量"
        android:textSize="@dimen/attention_item_footer_text_size"
        android:textColor="@color/app_item_footer_color_dark"
        android:drawableLeft="@drawable/vector_drawable_accept"
        android:drawablePadding="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/mind_ListItem_Content_Bg_Line"
        app:layout_constraintBottom_toTopOf="@+id/mind_ListItem_Divider_Line"
        app:layout_constraintRight_toLeftOf="@+id/mind_ListItem_Comment_Num"/>
    <TextView
        android:id="@+id/mind_ListItem_Comment_Num"
        android:text="评论数量"
        android:textSize="@dimen/attention_item_footer_text_size"
        android:textColor="@color/app_item_footer_color_dark"
        android:drawableLeft="@drawable/vector_drawable_comment"
        android:drawablePadding="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/mind_ListItem_Content_Bg_Line"
        app:layout_constraintBottom_toTopOf="@+id/mind_ListItem_Divider_Line"
        app:layout_constraintRight_toLeftOf="@+id/mind_ListItem_Retransmission_Num"/>
    <TextView
        android:id="@+id/mind_ListItem_Retransmission_Num"
        android:text="转发数量"
        android:textSize="@dimen/attention_item_footer_text_size"
        android:textColor="@color/app_item_footer_color_dark"
        android:drawableLeft="@drawable/vector_drawable_retransmission"
        android:drawablePadding="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/mind_ListItem_Content_Bg_Line"
        app:layout_constraintBottom_toTopOf="@+id/mind_ListItem_Divider_Line"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/mind_ListItem_Release_Btn"
        android:text="@string/mind_list_item_release_btn_text"
        android:textSize="@dimen/mind_fragment_release_btn_text_size"
        android:textColor="@color/app_common_btn_text_color_light"
        android:background="@drawable/mind_list_item_release_btn_bg"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/mind_ListItem_Content_Bg_Line"
        app:layout_constraintBottom_toTopOf="@+id/mind_ListItem_Divider_Line"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:id="@+id/mind_ListItem_ComPact_Icon"
        android:src="@drawable/compact_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:id="@+id/mind_ListItem_Divider_Line"
        android:background="@color/app_mind_content_item_divider_line_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/app_mind_content_content_item_divider_line_width"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@id/mind_ListItem_Content_Bg_Line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>