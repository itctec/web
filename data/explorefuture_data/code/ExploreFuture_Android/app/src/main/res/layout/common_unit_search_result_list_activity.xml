<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/app_status_bar_height"
    android:background="@color/app_def_theme_activity_bg"
    tools:context=".common_unit.search_result.SearchResultActivity">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/search_Result_List_Activity_Top_Navigation"
        android:layout_width="0dp"
        android:layout_height="@dimen/app_top_navigation_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/search_Result_List_Activity_Top_Navigation_Back_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:src="@drawable/vector_drawable_close_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/search_Result_List_Activity_Top_Navigation_Title_Text"
            android:maxLength="25"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/search_result_list_activity_top_navigation_title_text"
            android:textColor="@color/app_top_navigation_text_selected_color"
            android:textSize="@dimen/app_top_navigation_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/search_Result_List_Activity_Top_Sort_Bar"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_Result_List_Activity_Top_Navigation">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/search_Result_List_Activity_Top_Sort_Solution_Btn_Layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/search_Result_List_Activity_Top_Sort_Bar_Indicator"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/search_Result_List_Activity_Top_Sort_Product_Btn_Layout">
            <TextView
                android:id="@+id/search_Result_List_Activity_Top_Sort_Solution_Btn"
                android:text="@string/search_result_list_activity_top_sort_solution_btn_text"
                android:textColor="@color/sort_top_navigation_text_selected_color"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/search_Result_List_Activity_Top_Sort_Product_Btn_Layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/search_Result_List_Activity_Top_Sort_Bar_Indicator"
            app:layout_constraintLeft_toRightOf="@id/search_Result_List_Activity_Top_Sort_Solution_Btn_Layout"
            app:layout_constraintRight_toLeftOf="@+id/search_Result_List_Activity_Top_Sort_Mind_Btn_Layout">
            <TextView
                android:id="@+id/search_Result_List_Activity_Top_Sort_Product_Btn"
                android:text="@string/search_result_list_activity_top_sort_product_btn_text"
                android:textColor="@color/sort_top_navigation_text_selected_color"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/search_Result_List_Activity_Top_Sort_Mind_Btn_Layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/search_Result_List_Activity_Top_Sort_Bar_Indicator"
            app:layout_constraintLeft_toRightOf="@+id/search_Result_List_Activity_Top_Sort_Product_Btn_Layout"
            app:layout_constraintRight_toLeftOf="@+id/search_Result_List_Activity_Top_Sort_Action_Btn_Layout">
            <TextView
                android:id="@+id/search_Result_List_Activity_Top_Sort_Mind_Btn"
                android:text="@string/search_result_list_activity_top_sort_mind_btn_text"
                android:textColor="@color/sort_top_navigation_text_selected_color"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/search_Result_List_Activity_Top_Sort_Action_Btn_Layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/search_Result_List_Activity_Top_Sort_Bar_Indicator"
            app:layout_constraintLeft_toRightOf="@+id/search_Result_List_Activity_Top_Sort_Mind_Btn_Layout"
            app:layout_constraintRight_toLeftOf="@+id/search_Result_List_Activity_Top_Sort_Person_Btn_Layout">
            <TextView
                android:id="@+id/search_Result_List_Activity_Top_Sort_Action_Btn"
                android:text="@string/search_result_list_activity_top_sort_action_btn_text"
                android:textColor="@color/sort_top_navigation_text_selected_color"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/search_Result_List_Activity_Top_Sort_Person_Btn_Layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/search_Result_List_Activity_Top_Sort_Bar_Indicator"
            app:layout_constraintLeft_toRightOf="@+id/search_Result_List_Activity_Top_Sort_Action_Btn_Layout"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:id="@+id/search_Result_List_Activity_Top_Sort_Person_Btn"
                android:text="@string/search_result_list_activity_top_sort_person_btn_text"
                android:textColor="@color/sort_top_navigation_text_selected_color"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.Guideline
            android:id="@+id/search_Result_Top_Navigation_Indicator_Vertical_Guideline_One"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2" />
        <View
            android:id="@+id/search_Result_List_Activity_Top_Sort_Bar_Indicator"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/app_navigation_bg_line_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/search_Result_Top_Navigation_Indicator_Vertical_Guideline_One" />
    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_Result_List_Activity_RecyclerView"
        android:overScrollMode="never"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/search_Result_List_Activity_Top_Sort_Bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>