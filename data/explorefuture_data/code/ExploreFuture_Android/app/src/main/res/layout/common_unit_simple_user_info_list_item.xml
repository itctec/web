<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/simple_User_Info_ListItem_HeadPortrait"
        android:src="@drawable/picture_place_image"
        android:scaleType="centerCrop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/simple_User_Info_ListItem_Nickname"
        android:text="昵称"
        android:textColor="@color/app_item_name_color_dark"
        android:textSize="@dimen/attention_person_name_text_size"
        android:maxLength="@dimen/attention_item_name_text_one_slash_four_max_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/simple_User_Info_ListItem_HeadPortrait"
        app:layout_constraintBottom_toTopOf="@+id/simple_User_Info_ListItem_Personalized_Signature"
        app:layout_constraintLeft_toRightOf="@id/simple_User_Info_ListItem_HeadPortrait"/>
    <TextView
        android:id="@+id/simple_User_Info_ListItem_Personalized_Signature"
        android:textColor="@color/app_item_name_color_dark"
        android:textSize="11dp"
        android:maxLength="200"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/simple_User_Info_ListItem_Nickname"
        app:layout_constraintBottom_toTopOf="@+id/simple_User_Info_ListItem_Fans_Count"
        app:layout_constraintLeft_toRightOf="@id/simple_User_Info_ListItem_HeadPortrait"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/simple_User_Info_ListItem_Fans_Count"
        android:textColor="#777777"
        android:textSize="11dp"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/simple_User_Info_ListItem_Personalized_Signature"
        app:layout_constraintBottom_toBottomOf="@id/simple_User_Info_ListItem_HeadPortrait"
        app:layout_constraintLeft_toRightOf="@id/simple_User_Info_ListItem_HeadPortrait"/>
    <View
        android:id="@+id/simple_User_Info_ListItem_Content_Divider_Line"
        android:background="@color/attention_common_item_divider_line_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/attention_item_bg_line_width"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/simple_User_Info_ListItem_HeadPortrait"
        app:layout_constraintLeft_toRightOf="@id/simple_User_Info_ListItem_HeadPortrait"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
