<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_Point_Edit_Activity_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".mind.edit_activity.MindEditActivity">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/view_Point_Edit_Top_Navigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_top_navigation_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/view_Point_Edit_Top_Navigation_Close_Btn"
            android:src="@drawable/vector_drawable_close_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/view_point_edit_top_navigation_title_text"
            android:textColor="@color/app_top_navigation_text_selected_color"
            android:textSize="@dimen/app_top_navigation_text_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
        <TextView
            android:id="@+id/view_Point_Edit_Top_Navigation_Release_Btn"
            android:text="@string/mind_edit_top_navigation_release_btn_text"
            android:textColor="#FF5500"
            android:textSize="@dimen/mind_edit_top_navigation_text_size"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
        <View
            android:id="@+id/view_Point_Edit_Top_Navigation_BottomLine"
            android:layout_width="0dp"
            android:layout_height="@dimen/app_navigation_bg_line_width"
            android:background="@color/app_navigation_bg_line_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>
    <ScrollView
        android:overScrollMode="never"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:layout_marginBottom="2dp"
        app:layout_constraintTop_toBottomOf="@id/view_Point_Edit_Top_Navigation"
        app:layout_constraintBottom_toTopOf="@+id/view_Point_Edit_Char_Count_Text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/view_Point_Title_EditText"
                android:hint="@string/view_point_title_edit_hint_text"
                android:textColorHint="#555555"
                android:textSize="17dp"
                android:textColor="#333333"
                android:gravity="top"
                android:minLines="1"
                android:maxLength="15"
                android:textCursorDrawable="@drawable/app_search_box_edit_cursor"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <EditText
                android:id="@+id/view_Point_Content_EditText"
                android:hint="@string/view_point_content_edit_hint_text"
                android:textColorHint="#888888"
                android:textSize="15dp"
                android:textColor="#333333"
                android:gravity="top"
                android:minLines="5"
                android:maxLength="@dimen/app_mind_content_item_text_max_length"
                android:textCursorDrawable="@drawable/app_search_box_edit_cursor"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/view_Point_Title_EditText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/view_Point_Add_Cover_Image_Tip_Text"
                android:text="@string/view_point_add_cover_image_tip_text"
                android:textColor="#AAAAAA"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/view_Point_Cover_Image"
                app:layout_constraintBottom_toBottomOf="@+id/view_Point_Cover_Image"
                app:layout_constraintLeft_toLeftOf="@+id/view_Point_Cover_Image"
                app:layout_constraintRight_toRightOf="@+id/view_Point_Cover_Image"/>
            <ImageView
                android:id="@+id/view_Point_Cover_Image"
                android:src="@drawable/view_point_cover_image_bg"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:layout_constraintTop_toBottomOf="@id/view_Point_Content_EditText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <ImageView
                android:id="@+id/view_Point_Cover_Image_Delete_Btn"
                android:src="@drawable/vector_drawable_right_top_close"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@+id/view_Point_Cover_Image"
                app:layout_constraintRight_toRightOf="@+id/view_Point_Cover_Image"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
    <TextView
        android:id="@+id/view_Point_Edit_Char_Count_Text"
        android:text="0/280"
        android:textSize="15dp"
        android:textColor="#888888"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
