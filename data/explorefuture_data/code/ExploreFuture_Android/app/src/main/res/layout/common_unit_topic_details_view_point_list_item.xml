<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#55EEEEEE"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/topic_View_Point_Title"
        android:text="标题"
        android:textColor="@color/app_item_name_color_dark"
        android:textSize="@dimen/attention_person_name_text_size"
        android:maxLength="15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:id="@+id/topic_View_Point_Cover_Image"
        android:src="@drawable/picture_place_image"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/topic_View_Point_Title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/topic_View_Point_Content"
        android:textColor="@color/app_item_name_color_dark"
        android:textSize="12dp"
        android:maxLength="200"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/topic_View_Point_Cover_Image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/topic_View_Point_Accept_Count_Text_Layout"
        android:paddingBottom="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/topic_View_Point_Content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/topic_View_Point_Oppose_Count_Text_Layout">
        <TextView
            android:id="@+id/topic_View_Point_Accept_Count_Text"
            android:textColor="#777777"
            android:textSize="10dp"
            android:drawableLeft="@drawable/vector_drawable_view_point_accept"
            android:drawablePadding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/topic_View_Point_Oppose_Count_Text_Layout"
        android:paddingBottom="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/topic_View_Point_Content"
        app:layout_constraintLeft_toRightOf="@id/topic_View_Point_Accept_Count_Text_Layout"
        app:layout_constraintRight_toLeftOf="@+id/topic_View_Point_Comment_Count_Text_Layout">
        <TextView
            android:id="@+id/topic_View_Point_Oppose_Count_Text"
            android:textColor="#777777"
            android:textSize="10dp"
            android:drawableLeft="@drawable/vector_drawable_view_point_oppose"
            android:drawablePadding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/topic_View_Point_Comment_Count_Text_Layout"
        android:paddingBottom="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/topic_View_Point_Content"
        app:layout_constraintLeft_toRightOf="@id/topic_View_Point_Oppose_Count_Text_Layout"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:id="@+id/topic_View_Point_Comment_Count_Text"
            android:textColor="#777777"
            android:textSize="10dp"
            android:drawableLeft="@drawable/vector_drawable_view_point_comment"
            android:drawablePadding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>



</android.support.constraint.ConstraintLayout>
