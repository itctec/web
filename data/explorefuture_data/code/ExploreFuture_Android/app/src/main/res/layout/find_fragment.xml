<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.youth.banner.Banner
        android:id="@+id/find_Banner"
        android:background="@drawable/picture_place_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:image_scale_type="center_crop"
        app:delay_time="5000"
        app:indicator_drawable_selected="@drawable/app_banner_indicator_selected"
        app:indicator_drawable_unselected="@drawable/app_banner_indicator_unselected"
        app:indicator_height="2dp"
        app:indicator_margin="3dp"
        app:indicator_width="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="3:1"/>
</android.support.constraint.ConstraintLayout>