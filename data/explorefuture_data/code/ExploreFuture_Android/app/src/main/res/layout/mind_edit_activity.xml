<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mind_Edit_Activity_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".mind.edit_activity.MindEditActivity">

    <include
        android:id="@+id/mind_Edit_Top_Navigation"
        layout="@layout/mind_edit_activity_top_navigation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/mind_Edit_Top_Navigation_Bottom_Horizontal_Guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <android.support.constraint.Guideline
        android:id="@+id/mind_Edit_Top_Navigation_Bottom_Horizontal_Guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/app_top_navigation_height" />
    <ScrollView
        android:overScrollMode="never"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:layout_marginBottom="2dp"
        app:layout_constraintTop_toBottomOf="@id/mind_Edit_Top_Navigation_Bottom_Horizontal_Guideline"
        app:layout_constraintBottom_toTopOf="@+id/mind_Edit_Char_Count_Text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/mind_Edit_EditText"
                android:hint="@string/mind_edit_hint_text"
                android:textColorHint="#888888"
                android:textSize="15dp"
                android:textColor="#333333"
                android:gravity="top"
                android:minLines="5"
                android:maxLength="@dimen/app_mind_content_item_text_max_length"
                android:textCursorDrawable="@drawable/app_search_box_edit_cursor"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/mind_Edit_RecyclerView"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toBottomOf="@id/mind_Edit_EditText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <ImageView
                android:id="@+id/mind_Edit_Video_Frame_View"
                android:scaleType="centerCrop"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/mind_Edit_EditText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintDimensionRatio="5:2"/>
            <ImageView
                android:id="@+id/mind_Edit_Video_Frame_View_Delete_Btn"
                android:src="@drawable/vector_drawable_item_delete"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/mind_Edit_Video_Frame_View"
                app:layout_constraintRight_toRightOf="@id/mind_Edit_Video_Frame_View"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
    <TextView
        android:id="@+id/mind_Edit_Attachment"
        android:text="设计文稿"
        android:textSize="11dp"
        android:maxLength="20"
        android:textColor="#888888"
        android:drawableLeft="@drawable/vector_drawable_file_icon"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/mind_Edit_Bottom_Tools_Bar"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:id="@+id/mind_Edit_Attachment_Delete_Btn"
        android:src="@drawable/vector_drawable_right_close"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/mind_Edit_Attachment"
        app:layout_constraintBottom_toBottomOf="@id/mind_Edit_Attachment"
        app:layout_constraintLeft_toRightOf="@id/mind_Edit_Attachment"/>
    <TextView
        android:id="@+id/mind_Edit_Char_Count_Text"
        android:text="0/280"
        android:textSize="15dp"
        android:textColor="#888888"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toTopOf="@+id/mind_Edit_Bottom_Tools_Bar"
        app:layout_constraintRight_toRightOf="parent"/>
    <include
        android:id="@+id/mind_Edit_Bottom_Tools_Bar"
        layout="@layout/mind_edit_activity_bottom_tools_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="10:1"/>

</android.support.constraint.ConstraintLayout>
