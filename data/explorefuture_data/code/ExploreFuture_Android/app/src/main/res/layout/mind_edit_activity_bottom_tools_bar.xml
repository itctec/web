<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/bottom_Tools_Bar_Top_Line"
        android:background="@color/app_navigation_bg_line_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/app_navigation_bg_line_width"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:id="@+id/bottom_Tools_Bar_Add_Image_Btn"
        android:src="@drawable/vector_drawable_picture_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bottom_Tools_Bar_Top_Line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bottom_Tools_Bar_Take_Photo_Btn"/>
    <ImageView
        android:id="@+id/bottom_Tools_Bar_Take_Photo_Btn"
        android:src="@drawable/vector_drawable_camera_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bottom_Tools_Bar_Top_Line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bottom_Tools_Bar_Add_Image_Btn"
        app:layout_constraintRight_toLeftOf="@+id/bottom_Tools_Bar_Add_Video_Btn"/>
    <ImageView
        android:id="@+id/bottom_Tools_Bar_Add_Video_Btn"
        android:src="@drawable/vector_drawable_video_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bottom_Tools_Bar_Top_Line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bottom_Tools_Bar_Take_Photo_Btn"
        app:layout_constraintRight_toLeftOf="@+id/bottom_Tools_Bar_Add_Attachment_Btn"/>
    <ImageView
        android:id="@+id/bottom_Tools_Bar_Add_Attachment_Btn"
        android:src="@drawable/vector_drawable_attachment_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bottom_Tools_Bar_Top_Line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bottom_Tools_Bar_Add_Video_Btn"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>