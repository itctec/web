<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/mind_No_Data_Tip_Text"
        android:text="@string/mind_no_data_text"
        android:gravity="center"
        android:textColor="@color/app_data_empty_color"
        android:textSize="@dimen/no_data_tip_text_size"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.35"/>
    <Button
        android:id="@+id/mind_No_Data_Start_Mind_Btn"
        android:text="@string/mind_no_data_start_mind_btn_text"
        android:textSize="@dimen/app_common_btn_text_size"
        android:textColor="@color/app_common_btn_text_color_light"
        android:background="@drawable/app_common_btn_bg"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/mind_No_Data_Tip_Text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>