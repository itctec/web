<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/mine_Person_Info_Layout"
        android:background="@drawable/picture_place_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="15:7">
        <android.support.constraint.Guideline
            android:id="@+id/mine_Status_Bar_Horizontal_Guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintGuide_begin="@dimen/app_status_bar_height" />
        <ImageView
            android:id="@+id/mine_Message_Btn"
            android:src="@drawable/vector_drawable_message_icon"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/mine_Status_Bar_Horizontal_Guideline"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <ImageView
            android:id="@+id/mine_Settings_Btn"
            android:src="@drawable/vector_drawable_settings_icon"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/mine_Status_Bar_Horizontal_Guideline"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/mine_Login_Btn"
            android:text="注册/登录"
            android:textColor="#333333"
            android:textSize="15dp"
            android:drawableRight="@drawable/vector_drawable_arrow_right"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/mine_Status_Bar_Horizontal_Guideline"
            app:layout_constraintRight_toRightOf="parent"/>
        <android.support.constraint.Guideline
            android:id="@+id/mine_HeadPortrait_Vertical_Guideline_One"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.415" />
        <android.support.constraint.Guideline
            android:id="@+id/mine_HeadPortrait_Vertical_Guideline_Two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.585" />
        <ImageView
            android:id="@+id/mine_HeadPortrait_Image"
            android:background="@drawable/app_head_portrait_place_image"
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/mine_Status_Bar_Horizontal_Guideline"
            app:layout_constraintLeft_toRightOf="@id/mine_HeadPortrait_Vertical_Guideline_One"
            app:layout_constraintRight_toLeftOf="@id/mine_HeadPortrait_Vertical_Guideline_Two"
            app:layout_constraintDimensionRatio="1:1"/>
        <TextView
            android:id="@+id/mine_Nickname_Text"
            android:text="昵称"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/app_text_shadow_color_dark"
            android:shadowRadius="15"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/mine_HeadPortrait_Image"
            app:layout_constraintLeft_toLeftOf="@id/mine_HeadPortrait_Image"
            app:layout_constraintRight_toRightOf="@id/mine_HeadPortrait_Image"/>
        <TextView
            android:id="@+id/mine_Personalized_Signature_Text"
            android:text="个性签名"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/app_text_shadow_color_dark"
            android:shadowRadius="15"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@id/mine_Nickname_Text"
            app:layout_constraintLeft_toLeftOf="@id/mine_HeadPortrait_Image"
            app:layout_constraintRight_toRightOf="@id/mine_HeadPortrait_Image"/>
        <TextView
            android:id="@+id/mine_Fans_Count_Text"
            android:text="@string/mine_fans_count_text"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="7dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/app_text_shadow_color_dark"
            android:shadowRadius="15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/mine_Attention_Count_Text"
            android:text="@string/mine_attention_count_text"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="7dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/app_text_shadow_color_dark"
            android:shadowRadius="15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/mine_Fans_Count_Text"/>
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>