<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/mine_Interaction_Comment_ListItem_Header_Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/mine_Interaction_Comment_ListItem_HeadPortrait"
            android:src="@drawable/picture_place_image"
            android:scaleType="centerCrop"
            android:layout_width="45dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintDimensionRatio="1:1"/>
        <TextView
            android:id="@+id/mine_Interaction_Comment_ListItem_Nickname"
            android:text="昵称"
            android:textColor="@color/app_item_name_color_dark"
            android:textSize="@dimen/attention_person_name_text_size"
            android:maxLength="@dimen/attention_item_name_text_one_slash_four_max_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@id/mine_Interaction_Comment_ListItem_HeadPortrait"
            app:layout_constraintBottom_toTopOf="@+id/mine_Interaction_Comment_ListItem_Datetime"
            app:layout_constraintLeft_toRightOf="@id/mine_Interaction_Comment_ListItem_HeadPortrait"/>
        <TextView
            android:id="@+id/mine_Interaction_Comment_ListItem_Datetime"
            android:text="XXXX年XX月XX日 XX:XX"
            android:textColor="@color/app_item_name_summary_color_dark"
            android:textSize="@dimen/attention_person_domain_text_size"
            android:maxLength="@dimen/attention_item_datetime_text_two_slash_three_short_max_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@id/mine_Interaction_Comment_ListItem_Nickname"
            app:layout_constraintBottom_toTopOf="@id/mine_Interaction_Comment_ListItem_HeadPortrait"
            app:layout_constraintLeft_toRightOf="@id/mine_Interaction_Comment_ListItem_HeadPortrait"/>
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/mine_Interaction_Comment_ListItem_Content_Text"
        android:text="@string/recommend_mind_content_empty_text"
        android:textColor="@color/app_mind_content_item_text_color"
        android:textSize="@dimen/app_mind_content_item_text_size"
        android:maxLength="@dimen/app_mind_content_item_text_max_length"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/mine_Interaction_Comment_ListItem_Header_Layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:id="@+id/mine_Interaction_Comment_ListItem_Content_Bg_Line"
        android:background="@color/attention_common_item_divider_line_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/attention_item_bg_line_width"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/mine_Interaction_Comment_ListItem_Content_Text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/mine_Interaction_Comment_ListItem_Mind_Layout"
        android:background="#77EEEEEE"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/mine_Interaction_Comment_ListItem_Content_Bg_Line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/mine_Interaction_Comment_ListItem_Mind_Image"
            android:src="@drawable/picture_place_image"
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintDimensionRatio="1:1"/>
        <TextView
            android:id="@+id/mine_Interaction_Comment_ListItem_Mind_Nickname"
            android:text="昵称"
            android:textColor="@color/app_item_name_color_dark"
            android:textSize="@dimen/attention_person_name_text_size"
            android:maxLength="@dimen/attention_item_name_text_one_slash_four_max_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/mine_Interaction_Comment_ListItem_Mind_Image"/>
        <TextView
            android:id="@+id/mine_Interaction_Comment_ListItem_Mind_Content_Text"
            android:text="@string/recommend_mind_content_empty_text"
            android:textColor="@color/app_mind_content_item_text_color"
            android:textSize="11dp"
            android:maxLength="80"
            android:gravity="top"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/mine_Interaction_Comment_ListItem_Mind_Nickname"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/mine_Interaction_Comment_ListItem_Mind_Image"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/mine_Interaction_Comment_ListItem_Divider_Line"
        android:background="@color/app_mind_content_item_divider_line_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/app_mind_content_content_item_divider_line_width"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/mine_Interaction_Comment_ListItem_Mind_Layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>