<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/mine_Settings_Receive_Address_ListItem_HeadPortrait"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_width="45dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/app_head_portrait_place_image"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mine_Settings_Receive_Address_ListItem_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:maxLength="@dimen/attention_item_name_text_one_slash_four_max_length"
        android:text="姓名"
        android:textColor="@color/app_item_name_color_dark"
        android:textSize="@dimen/attention_person_name_text_size"
        app:layout_constraintLeft_toRightOf="@id/mine_Settings_Receive_Address_ListItem_HeadPortrait"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/mine_Settings_Receive_Address_ListItem_Address"/>

    <TextView
        android:id="@+id/mine_Settings_Receive_Address_ListItem_Phone_Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:maxLength="@dimen/attention_item_datetime_text_two_slash_three_short_max_length"
        android:textColor="@color/app_item_name_summary_color_dark"
        android:textSize="@dimen/attention_person_domain_text_size"
        app:layout_constraintBottom_toBottomOf="@id/mine_Settings_Receive_Address_ListItem_Name"
        app:layout_constraintLeft_toRightOf="@id/mine_Settings_Receive_Address_ListItem_Name" />

    <TextView
        android:id="@+id/mine_Settings_Receive_Address_ListItem_Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/app_item_name_summary_color_dark"
        android:textSize="@dimen/attention_person_domain_text_size"
        app:layout_constraintTop_toBottomOf="@id/mine_Settings_Receive_Address_ListItem_Name"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/mine_Settings_Receive_Address_ListItem_HeadPortrait" />
    <ImageView
        android:id="@+id/mine_Settings_Receive_Address_ListItem_Def_Icon"
        android:src="@drawable/vector_drawable_default_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:id="@+id/mine_Settings_Receive_Address_ListItem_Content_Bg_Line"
        android:layout_width="0dp"
        android:layout_height="@dimen/attention_item_bg_line_width"
        android:layout_marginTop="15dp"
        android:background="@color/attention_common_item_divider_line_color"
        app:layout_constraintLeft_toRightOf="@id/mine_Settings_Receive_Address_ListItem_HeadPortrait"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mine_Settings_Receive_Address_ListItem_HeadPortrait" />


</android.support.constraint.ConstraintLayout>