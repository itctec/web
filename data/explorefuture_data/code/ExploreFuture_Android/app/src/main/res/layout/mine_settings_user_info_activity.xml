<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/app_status_bar_height"
    android:background="@color/app_def_theme_activity_bg"
    tools:context=".mine.settings.SettingsUserInfoActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/settings_UserInfo_Top_Navigation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/settings_UserInfo_Top_Navigation_Bottom_Horizontal_Guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/settings_UserInfo_Top_Navigation_Back_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:src="@drawable/vector_drawable_back_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/settings_user_info_top_navigation_title_text"
            android:textColor="@color/app_top_navigation_text_selected_color"
            android:textSize="@dimen/app_top_navigation_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/settings_UserInfo_Top_Navigation_BottomLine"
            android:layout_width="0dp"
            android:layout_height="@dimen/app_navigation_bg_line_width"
            android:background="@color/app_navigation_bg_line_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.Guideline
        android:id="@+id/settings_UserInfo_Top_Navigation_Bottom_Horizontal_Guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/app_top_navigation_height" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_UserInfo_Top_Navigation_Bottom_Horizontal_Guideline">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/settings_UserInfo_Change_HeadPortrait_Layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/settings_UserInfo_HeadPortrait_Image"
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/app_head_portrait_place_image"
                    android:scaleType="centerCrop"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintRight_toLeftOf="@+id/settings_UserInfo_HeadPortrait_Right_Arrow"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/settings_UserInfo_Change_HeadPortrait_Image_Text"
                    android:text="@string/settings_user_info_change_head_portrait_image_text"
                    android:textColor="#333333"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toBottomOf="@id/settings_UserInfo_HeadPortrait_Image"
                    app:layout_constraintBottom_toTopOf="@id/settings_UserInfo_HeadPortrait_Image"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <ImageView
                    android:id="@+id/settings_UserInfo_HeadPortrait_Right_Arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/vector_drawable_arrow_right_item"
                    app:layout_constraintBottom_toBottomOf="@id/settings_UserInfo_HeadPortrait_Image"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/settings_UserInfo_HeadPortrait_Image" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/mine_divider_line_color"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/settings_UserInfo_HeadPortrait_Image" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/settings_UserInfo_Change_Nickname_Layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/settings_UserInfo_Change_HeadPortrait_Layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <TextView
                    android:id="@+id/settings_UserInfo_Change_Nickname_Text"
                    android:text="@string/settings_user_info_change_nickname_text"
                    android:textColor="#333333"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/settings_UserInfo_Nickname_Text"
                    android:text="@string/settings_user_info_change_nickname_text"
                    android:textColor="#999999"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/settings_UserInfo_Nickname_Right_Arrow"/>
                <ImageView
                    android:id="@+id/settings_UserInfo_Nickname_Right_Arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/vector_drawable_arrow_right_item"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/settings_UserInfo_Change_Nickname_Text"
                    app:layout_constraintBottom_toBottomOf="@id/settings_UserInfo_Change_Nickname_Text"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/mine_divider_line_color"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/settings_UserInfo_Change_Nickname_Text" />
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/settings_UserInfo_Change_Sex_Layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/settings_UserInfo_Change_Nickname_Layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/settings_UserInfo_Change_Sex_Text"
                    android:text="@string/settings_user_info_change_sex_text"
                    android:textColor="#333333"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/settings_UserInfo_Sex_Text"
                    android:text="@string/settings_user_info_change_sex_text"
                    android:textColor="#999999"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/settings_UserInfo_Sex_Right_Arrow"/>
                <ImageView
                    android:id="@+id/settings_UserInfo_Sex_Right_Arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/vector_drawable_arrow_right_item"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/settings_UserInfo_Change_Sex_Text"
                    app:layout_constraintBottom_toBottomOf="@id/settings_UserInfo_Change_Sex_Text"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/mine_divider_line_color"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/settings_UserInfo_Change_Sex_Text" />
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/settings_UserInfo_Change_Birthday_Layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/settings_UserInfo_Change_Sex_Layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/settings_UserInfo_Change_Birthday_Text"
                    android:text="@string/settings_user_info_change_birthday_text"
                    android:textColor="#333333"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/settings_UserInfo_Birthday_Text"
                    android:text="@string/settings_user_info_change_birthday_text"
                    android:textColor="#999999"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/settings_UserInfo_Birthday_Right_Arrow"/>

                <ImageView
                    android:id="@+id/settings_UserInfo_Birthday_Right_Arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/vector_drawable_arrow_right_item"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/settings_UserInfo_Change_Birthday_Text"
                    app:layout_constraintBottom_toBottomOf="@id/settings_UserInfo_Change_Birthday_Text"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/mine_divider_line_color"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/settings_UserInfo_Change_Birthday_Text" />
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/settings_UserInfo_Change_City_Layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/settings_UserInfo_Change_Birthday_Layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/settings_UserInfo_Change_City_Text"
                    android:text="@string/settings_user_info_change_city_text"
                    android:textColor="#333333"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/settings_UserInfo_City_Text"
                    android:text="@string/settings_user_info_change_city_text"
                    android:textColor="#999999"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/settings_UserInfo_City_Right_Arrow"/>
                <ImageView
                    android:id="@+id/settings_UserInfo_City_Right_Arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/vector_drawable_arrow_right_item"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/settings_UserInfo_Change_City_Text"
                    app:layout_constraintBottom_toBottomOf="@id/settings_UserInfo_Change_City_Text"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/mine_divider_line_color"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/settings_UserInfo_Change_City_Text" />
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/settings_UserInfo_Change_Personalized_Signature_Layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/settings_UserInfo_Change_City_Layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/settings_UserInfo_Change_Personalized_Signature_Text"
                    android:text="@string/settings_user_info_change_personalized_signature_text"
                    android:textColor="#333333"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/vector_drawable_arrow_right_item"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/settings_UserInfo_Change_Personalized_Signature_Text"
                    app:layout_constraintBottom_toBottomOf="@id/settings_UserInfo_Change_Personalized_Signature_Text"/>
                <TextView
                    android:id="@+id/settings_UserInfo_Personalized_Signature_Text"
                    android:text="@string/settings_user_info_change_personalized_signature_text"
                    android:textColor="#999999"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/settings_UserInfo_Change_Personalized_Signature_Text"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>