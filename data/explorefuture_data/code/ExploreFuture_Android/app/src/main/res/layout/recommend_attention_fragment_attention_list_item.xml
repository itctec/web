<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.Guideline
        android:id="@+id/recommend_Attention_ListItem_Vertical_Guideline_One"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <ImageView
        android:id="@+id/recommend_Attention_ListItem_HeadPortrait"
        android:src="@drawable/picture_place_image"
        android:scaleType="centerCrop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/recommend_Attention_ListItem_Vertical_Guideline_One"
        app:layout_constraintDimensionRatio="1:1"/>

    <TextView
        android:id="@+id/recommend_Attention_ListItem_Name"
        android:text="昵称"
        android:textColor="@color/content_common_item_title_text_color_dark"
        android:textSize="@dimen/people_name_text_size"
        android:maxLength="@dimen/content_item_title_text_one_slash_four_max_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/recommend_Attention_ListItem_HeadPortrait"
        app:layout_constraintBottom_toTopOf="@+id/recommend_Attention_ListItem_Datetime"
        app:layout_constraintLeft_toRightOf="@id/recommend_Attention_ListItem_HeadPortrait"/>
    <TextView
        android:id="@+id/recommend_Attention_ListItem_Datetime"
        android:text="XXXX年XX月XX日 XX:XX"
        android:textColor="@color/content_common_item_summary_text_color_dark"
        android:textSize="@dimen/people_domain_text_size"
        android:maxLength="@dimen/content_item_summary_text_two_slash_three_short_max_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/recommend_Attention_ListItem_Name"
        app:layout_constraintBottom_toTopOf="@id/recommend_Attention_ListItem_HeadPortrait"
        app:layout_constraintLeft_toRightOf="@id/recommend_Attention_ListItem_HeadPortrait"/>

    <TextView
        android:id="@+id/recommend_Attention_ListItem_Content_Text"
        android:text="@string/recommend_attention_content_empty_text"
        android:textColor="@color/content_common_item_title_text_color_dark"
        android:textSize="@dimen/people_name_text_size"
        android:maxLength="@dimen/mind_content_item_text_max_length"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/recommend_Attention_ListItem_HeadPortrait"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>