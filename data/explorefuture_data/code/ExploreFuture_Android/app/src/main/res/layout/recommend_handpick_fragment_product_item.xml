<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<!--Product Header-->
    <TextView
        android:id="@+id/recommend_Handpick_Product_Header_Divider_Title"
        android:text="@string/recommend_handpick_product_header_divider_title_text"
        android:textSize="@dimen/handpick_header_title_text_size"
        android:textColor="@color/handpick_header_title_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/recommend_Handpick_Product_Header_Divider_RecommendTop"
        android:text="@string/recommend_handpick_header_divider_recommend_top_text"
        android:textSize="@dimen/handpick_header_summary_text_size"
        android:textColor="@color/handpick_header_summary_text_color"
        android:drawableRight="@drawable/vector_drawable_more"
        android:drawablePadding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="@id/recommend_Handpick_Product_Header_Divider_Title"
        app:layout_constraintRight_toRightOf="parent"/>
<!--Product Line-->
    <android.support.constraint.Guideline
        android:id="@+id/recommend_Handpick_Product_Horizontal_Guideline_One"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="30dp" />
    <android.support.constraint.Guideline
        android:id="@+id/recommend_Handpick_Product_Horizontal_Guideline_Two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="130dp" />
    <View
        android:id="@+id/recommend_Handpick_Product_Horizontal_Line_Two"
        android:background="@color/handpick_common_item_divider_line_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/handpick_item_bg_line_width"
        android:layout_marginTop="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/recommend_Handpick_Product_Vertical_Guideline_Two"
        app:layout_constraintRight_toRightOf="parent"/>
    <android.support.constraint.Guideline
        android:id="@+id/recommend_Handpick_Product_Horizontal_Guideline_Three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="230dp" />
    <View
        android:id="@+id/recommend_Handpick_Product_Horizontal_Line_Three"
        android:background="@color/handpick_common_item_divider_line_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/handpick_item_bg_line_width"
        android:layout_marginTop="230dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <android.support.constraint.Guideline
        android:id="@+id/recommend_Handpick_Product_Horizontal_Guideline_Four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="330dp" />
    <View
        android:id="@+id/recommend_Handpick_Product_Horizontal_Line_Four"
        android:background="@color/handpick_common_item_divider_line_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/handpick_item_bg_line_width"
        android:layout_marginTop="330dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <android.support.constraint.Guideline
        android:id="@+id/recommend_Handpick_Product_Horizontal_Guideline_Five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="430dp" />
    <View
        android:id="@+id/recommend_Handpick_Product_Horizontal_Line_Five"
        android:background="@color/handpick_common_item_divider_line_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/handpick_item_bg_line_width"
        android:layout_marginTop="430dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <android.support.constraint.Guideline
        android:id="@+id/recommend_Handpick_Product_Vertical_Guideline_One"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />
    <View
        android:id="@+id/recommend_Handpick_Product_Vertical_Line_One"
        android:background="@color/handpick_common_item_divider_line_color"
        android:layout_width="@dimen/handpick_item_bg_line_width"
        android:layout_height="100dp"
        android:layout_marginTop="330dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.25"/>
    <android.support.constraint.Guideline
        android:id="@+id/recommend_Handpick_Product_Vertical_Guideline_Two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />
    <View
        android:id="@+id/recommend_Handpick_Product_Vertical_Line_Two"
        android:background="@color/handpick_common_item_divider_line_color"
        android:layout_width="@dimen/handpick_item_bg_line_width"
        android:layout_height="400dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>
