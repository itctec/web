        app:layout_constraintRight_toLeftOf="@id/recommend_Handpick_Product_Vertical_Guideline_Two">
        <TextView
            android:id="@+id/recommend_Handpick_Product_Level_A_Title"
            android:text="A级产品名称"
            android:textSize="@dimen/handpick_item_title_text_size"
            android:maxLength="@dimen/handpick_item_title_text_one_slash_four_max_length"
            android:textColor="@color/handpick_common_item_title_text_color_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/recommend_Handpick_Product_Level_A_Summary"
            android:text="产品描述"
            android:textSize="@dimen/handpick_item_summary_two_text_size"
            android:maxLength="@dimen/handpick_item_summary_text_one_slash_four_max_length"
            android:textColor="@color/handpick_common_item_summary_text_color_dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:layout_constraintBottom_toBottomOf="@id/recommend_Handpick_Product_Level_A_Title"
            app:layout_constraintLeft_toRightOf="@id/recommend_Handpick_Product_Level_A_Title"
            app:layout_constraintRight_toRightOf="parent"/>
        <ImageView
            android:id="@+id/recommend_Handpick_Product_Level_A_Image"
            android:src="@drawable/picture_place_image"
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/recommend_Handpick_Product_Level_A_Title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>
<!--Product Subject Sort One-->
