<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="35dp">

    <TextView
        android:id="@+id/mind_Sort_Top_Navigation_Hottest_Btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/recommend_mind_top_mind_navigation_hottest_btn_text"
        android:textColor="@color/app_top_navigation_text_selected_color"
        android:textSize="@dimen/mind_fragment_mind_sort_top_navigation_text_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/mind_Sort_Top_Navigation_BottomLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/mind_Sort_Top_Navigation_Newest_Btn" />

    <TextView
        android:id="@+id/mind_Sort_Top_Navigation_Newest_Btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:gravity="center_horizontal"
        android:text="@string/recommend_mind_top_mind_navigation_newest_btn_text"
        android:textColor="@color/app_top_navigation_text_selected_color"
        android:textSize="@dimen/mind_fragment_mind_sort_top_navigation_text_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mind_Sort_Top_Navigation_BottomLine"
        app:layout_constraintLeft_toRightOf="@id/mind_Sort_Top_Navigation_Hottest_Btn"
        app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:id="@+id/mind_Sort_Top_Navigation_BottomLine"
        android:layout_width="0dp"
        android:layout_height="@dimen/app_navigation_bg_line_width"
        android:background="@color/app_navigation_bg_line_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <android.support.constraint.Guideline
        android:id="@+id/mind_Sort_Top_Navigation_Indicator_Vertical_Guideline_One"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />
    <View
        android:id="@+id/mind_Sort_Top_Navigation_Indicator"
        android:layout_width="0dp"
        android:layout_height="@dimen/mind_fragment_mind_sort_top_navigation_indicator_line_height"
        android:background="@color/app_top_navigation_indicator_line_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/mind_Sort_Top_Navigation_Indicator_Vertical_Guideline_One"/>

</android.support.constraint.ConstraintLayout>