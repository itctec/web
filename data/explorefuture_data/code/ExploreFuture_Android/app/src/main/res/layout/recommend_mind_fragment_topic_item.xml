<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.youth.banner.Banner
        android:id="@+id/recommend_Mind_Topic_Banner"
        android:background="@drawable/picture_place_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:image_scale_type="center_crop"
        app:delay_time="5000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="3:1"/>
    <TextView
        android:text="@string/recommend_mind_topic_current_discuss_text"
        android:textStyle="bold"
        android:textColor="@color/mind_topic_current_discuss_text_color"
        android:textSize="@dimen/mind_topic_current_discuss_text_size"
        android:shadowColor="@color/app_text_shadow_color_light"
        android:shadowRadius="15"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</android.support.constraint.ConstraintLayout>