<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/sort_Sub_Sort_Layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="2:1">
        <TextView
            android:id="@+id/sort_Sub_Sort_Title"
            android:text="子类名称"
            android:textSize="@dimen/sort_item_title_text_size"
            android:maxLength="@dimen/sort_item_title_text_one_slash_two_max_length"
            android:textColor="@color/sort_level_two_title_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/sort_Sub_Sort_Summary"
            android:text="子类描述"
            android:textSize="@dimen/sort_item_summary_text_size"
            android:maxLength="@dimen/sort_item_summary_text_one_slash_two_max_length"
            android:textColor="@color/sort_level_two_summary_text_color"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@id/sort_Sub_Sort_Title"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <ImageView
            android:id="@+id/sort_Sub_Sort_Left_Image"
            android:src="@drawable/picture_place_image"
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2dp"
            app:layout_constraintTop_toBottomOf="@id/sort_Sub_Sort_Summary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/sort_Sub_Sort_Right_Image"/>
        <ImageView
            android:id="@+id/sort_Sub_Sort_Right_Image"
            android:src="@drawable/picture_place_image"
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="2dp"
            app:layout_constraintTop_toBottomOf="@id/sort_Sub_Sort_Summary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/sort_Sub_Sort_Left_Image"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>