<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="LaunchActivityTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/app_launch_activity_bg</item>
    </style>

    <style name="DefActivityTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/app_def_theme_activity_bg</item>
        <item name="android:windowAnimationStyle">@style/ActivitySwitch_Def_Animation</item>
    </style>

    <style name="ActivitySwitch_Def_Animation" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_anim_alpha_up_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_anim_alpha_down_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_anim_alpha_down_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_anim_alpha_up_out</item>
    </style>

</resources>
